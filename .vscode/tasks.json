{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "typst compile main",
			"type": "shell",
			"command": "typst",
			"args": ["compile", "main.typ", "--root=../"],
			"options": {
				"cwd": "${workspaceFolder}/src/"
			}
		},
		/*watch if any of .typ file is changed*/
		{
			"label": "typst watch",
			"type": "shell",
			"command": "typst",
			"args": ["watch", "--root=../"],
			"options": {
				"cwd": "${workspaceFolder}/src/"
			}
		}

	]
}

